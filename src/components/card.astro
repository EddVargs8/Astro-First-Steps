---
import { BackgroundGradient } from "@/components/ui/background-gradient";
interface Props {
  titulo: string;
  texto?: string;
  boton?: string;
}

const { titulo, texto, boton } = Astro.props;
---

<div class="flex flex-col items-center justify-center gap-4 p-8 w-full">
  <BackgroundGradient client:load>
    <div class="card grid grid-cols-2 gap-4">
      <div>
        <!-- Left Column -->
        <slot name="left-title" />
        <slot name="left-text" />
        <slot name="left-image" />
      </div>

      <div>
        <!-- Right Column -->
        <slot name="right-title" />
        <slot name="right-text" />
        <slot name="right-image" />
      </div>
    </div>
  </BackgroundGradient>
</div>

<style>
  .card {
    background: white;
    padding: 20px;
    border-radius: 16px;
    text-align: center;
    max-width: 280px;
    margin: 0 auto;
  }

  .card-title {
    margin: 0 0 10px;
    font-size: 20px;
  }

  .card-text {
    margin: 0 0 20px;
    color: #444;
    font-size: 14px;
  }

  .card-button {
    padding: 10px 16px;
    background: #3b82f6;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
  }
</style>
